<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/roundedcard"
        android:elevation="30dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageHotel"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/namaHotel"
            android:textColor="@color/dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/imageHotel"
            android:text="Nama Hotel"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaHotel"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/imageHotel"
            android:src="@drawable/ic_baseline_star_24" />

        <ImageView
            android:id="@+id/imglocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgstar"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/imageHotel"
            android:src="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/rangeHarga"
            android:textColor="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imglocation"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageHotel"
            android:text="Range Harga Hotel"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rating"
            android:textColor="@color/dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaHotel"
            android:layout_toEndOf="@id/imgstar"
            android:text="Rating"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/location"
            android:textColor="@color/dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgstar"
            android:layout_toEndOf="@id/imglocation"
            android:text="@string/location"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>